<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(type="module" src="./javascript/loginPage.js")
    link(href="./css/loginPageGrid.css" rel="stylesheet")
    title= title
  body
    div.loginImage
    div.loginPage__container
    div.form__container
      h3.apply-shake.err= msg
      form(action="/login-page", method="post")
        input(type="hidden" name="_csrf" value=token)
        label.form__head Welcome to Sherwood Wealth Services
        div.inputBox
          label Email or username
          div
            input(class='inputBox__inner' class='emailDemo' type='text' name='email')
        div.inputBox
          label Password
          div
            input(class='inputBox__inner' class='passwordDemo' type='password' name='password')
        div.inputBox
          p.inputBox__forgot Forgot your username or password?
        div.buttons
            button(type="submit" class="signIn") Sign In
            button(type="button" class="demo") Demo User
        h3.apply-shake.new= msg1
