doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script()
    link(href="./css/awesomplete.css" rel="stylesheet")
    script(src="./javascript/awesomplete.js" async)
    script(type="module" src="./javascript/searchBar.js")
    link(href="./css/searchbar.css" rel="stylesheet")

    title Dashboard Search Bar
  body
    div
      form(action='/search' method='post')
        div
          input(
            class='searchBar'
            class='awesomplete'
            type='text'
            name='search'
            placeholder='Search'
            autocomplete='off'
            list='company'
            size='5'
          )
          datalist(id='company' size='5').searchbarDrop
            each val in stockData
              option=val.fullName

    div
      img(src=data.logo)
      h4= data.name
      h4= data.weburl
      h4= data.finnhubIndustry
      h4= data.marketCapitalization
    div
      h4= data.shareOutstanding
      h4= data.ipo
      h4= data.country
      h4= data.phone

